@inject ISnackbar Snackbar
@inject IDialogService DialogService


<MudText Typo="Typo.h3">@Title</MudText>
<MudCard>
    <MudCardContent>
        <MudTextField Label="User Id" HelperText="Please enter a valid user id"
                      @bind-Value="DeleteUserId" />
    </MudCardContent>
    <MudCardActions>
        <MudButton OnClick="ClickDelete" Color="Color.Error">Delete</MudButton>
    </MudCardActions>
</MudCard>

@code {
    [Parameter]
    public string? Title { get; set; }

    [Parameter]
    public EventCallback<string> OnRemoveUser { get; set; }

    public string? DeleteUserId { get; set; }

    private async Task ClickDelete()
    {
        await OnRemoveUser.InvokeAsync(DeleteUserId);
    }    
}

@inject ILoanService LoanService


<MudText Align="Align.Center" Typo="Typo.h5">Your loans:</MudText>
@if(userLoans != null)
{
    @foreach (var item in userLoans)
    {
        <MudCard>
            <MudCardContent>
                <MudText Typo="Typo.h6"> @item.Item.Title</MudText>
                <MudText Typo="Typo.body2">@item.Item.Type</MudText>
                <MudText Typo="Typo.body2">Creator: @item.Item.Creator</MudText>
                <MudText Typo="Typo.button">Date loaned: @item.DateFrom</MudText>
                <MudText Typo="Typo.button">Return date: @item.DateTo</MudText>
            </MudCardContent>
        </MudCard>
    }
}
else
{
    <MudText Align="Align.Center" Typo="Typo.body1">Your do not have any loans</MudText>
}

    

              
        
@code {
    private List<LoanViewModel> userLoans { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        userLoans = await LoanService.GetMyLoans();
    }
}